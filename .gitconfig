[user]
	name = Dylan Barnard
[diff]
    tool = vscode
[difftool "vscode"]
    cmd = code --wait --diff $LOCAL $REMOTE
[alias]
	a = add
	aa = add --all --intent-to-add
	ap = add --patch

	b = branch
	bd = branch --delete
	bdf = branch -D

	c = commit
	ca = commit --amend
	cf = commit --fixup
	co = checkout
	cob = checkout -b
	cm = commit -m

	d = diff
	dc = diff --cached
	db = diff master HEAD
	# Parametize this?
	d1 = diff HEAD~1 HEAD
	d2 = diff HEAD~3 HEAD
	d3 = diff HEAD~3 HEAD

	f = fetch

	l = log

	p = push
	pf = push --force
	po = "!git push --set-upstream origin \"$(git rev-parse --abbrev-ref HEAD)\""

	prc = "!f() { git rev-parse \"$1^\" | pbcopy ; }; f"

	pl = pull

	rb = rebase
	rbi = rebase -i

	rs = reset
	rss = reset --soft

	s = status

	la = "!git config -l | grep alias | cut -c 7-"
	# git alias to autosquash fixup commits non-interactivly
	# `!GIT_SEQUENCE_EDITOR= ... --autosquash $COMMIT_SHA` where $COMMIT_SHA is a SHA prior to commit to fixup
	# http://www.lowlevelmanager.com/2016/02/how-to-run-git-interactive-rebase-non.html
	fixup = !GIT_SEQUENCE_EDITOR=true git rebase -i --autosquash
[rebase]
	autosquash = true

[push]
	default = simple

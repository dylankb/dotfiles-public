[user]
	name = Dylan Barnard
	email = dylan.barnard@gmail.com
[alias]
	a = add
	aa = add --all --intent-to-add
	ap = add --patch

	b = branch
	bd = branch --delete
	bdf = branch -D

	c = commit
	ca = commit --amend
	cf = commit --fixup
	co = checkout
	cob = checkout -b
	cm = commit -m

	d = diff
	dc = diff --cached
	db = diff master HEAD
	# Parametize this?
	d1 = diff HEAD~1 HEAD
	d2 = diff HEAD~3 HEAD
	d3 = diff HEAD~3 HEAD

	f = fetch

	l = log

	p = push
	pf = push --force
	po = "!git push --set-upstream origin \"$(git rev-parse --abbrev-ref HEAD)\""

	prc = "!f() { git rev-parse \"$1^\" | pbcopy ; }; f"

	pl = pull

	rb = rebase
	rbi = rebase -i

	rs = reset
	rss = reset --soft

	s = status

	la = "!git config -l | grep alias | cut -c 7-"
	gui = !sh -c /usr/local/git/libexec/git-core/git-gui
[rebase]
	autosquash = true

[push]
	default = simple
